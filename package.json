{
	"name": "chat-mcp-cli",
	"version": "0.0.0",
	"license": "MIT",
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"start": "node dist/cli.js",
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "prettier --check . && xo && ava"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@ai-sdk/anthropic": "^3.0.33",
		"@ai-sdk/google": "^3.0.2",
		"@ai-sdk/mcp": "^1.0.5",
		"@ai-sdk/openai": "^3.0.23",
		"@mishieck/ink-titled-box": "^0.3.0",
		"@modelcontextprotocol/sdk": "^1.25.1",
		"@openrouter/ai-sdk-provider": "^1.5.4",
		"ai": "^6.0.6",
		"ink": "^6.6.0",
		"ink-big-text": "^2.0.0",
		"ink-gradient": "^3.0.0",
		"ink-spinner": "^5.0.0",
		"ink-text-input": "^6.0.0",
		"meow": "^14.0.0",
		"react": "^19.2.3",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^8.1.0",
		"@types/react": "^19.2.7",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^6.4.1",
		"chalk": "^5.6.2",
		"eslint-config-xo-react": "^0.29.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"ink-testing-library": "^4.0.0",
		"prettier": "^3.7.4",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"xo": "^1.2.3"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
